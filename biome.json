{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  },
  "overrides": [
    {
      "ignore": ["node_modules", "dist"]
    }
  ],
  "files": {
    "ignore": [".vscode/*", "drizzle/migrations/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noUnknownPseudoClass": "off",
        "noUnknownTypeSelector": "off"
      },
      "complexity": {
        "noVoid": "warn",
        "noStaticOnlyClass": {
          "level": "off"
        },
        "noUselessCatch": "off"
      },
      "suspicious": {
        "noEmptyInterface": "off",
        "noExplicitAny": "off",
        "useAwait": "off",
        "noImplicitAnyLet": "off"
      },
      "correctness": {
        "noUnusedImports": "error"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noNamespace": "off",
        "noParameterAssign": "off",
        "noInferrableTypes": "warn",
        "noNegationElse": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "none",
      "bracketSpacing": true,
      "quoteStyle": "single"
    }
  }
}
